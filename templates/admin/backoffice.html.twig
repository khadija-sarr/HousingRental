{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('assets/stylesheets/reset.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/stylesheets/root.css') }}">
{% endblock %}
{% block content %}
    <nav>
        <a class="siteTitle" href="{{ path('default_home') }}">HousingRental</a>
        <ul>
            {% if categories is defined %}
                {% for category in categories %}
                    <li>
                        <a href="{{ path('default_category', { 'alias' : category.alias }) }}">{{ category.name }}</a>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </nav>
    <div class="adminContainer">
        <div class="adminPanel">
            <div class="sideBar">
                <div class="adminPhoto">
                    {% if app.user %}
                        <img src="{{ asset('uploads/users/' ~ app.user.photo) }}" alt="Photo de {{ app.user.firstname }} {{ app.user.lastname }}">
                    {% else %}
                        <p>Photo</p>
                    {% endif %}
                </div>
                <div class="divider"></div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-signature"></i>
                    </div>
                    <p>{% if app.user %}{{ app.user.firstname }}{% else %}Prénom{% endif %}</p>
                </div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-signature"></i>
                    </div>
                    <p>{% if app.user %}{{ app.user.lastname }}{% else %}Nom{% endif %}</p>
                </div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <p title="{{ app.user.email }}">{% if app.user %}{{ app.user.email|slice(0, 12) }}...{% else %}Email{% endif %}</p>
                </div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <p>{% if app.user %}0{{ app.user.phone }}{% else %}Téléphone{% endif %}</p>
                </div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-globe-africa"></i>
                    </div>
                    <p>{% if app.user %}{{ app.user.country }}{% else %}Pays{% endif %}</p>
                </div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-city"></i>
                    </div>
                    <p>{% if app.user %}{{ app.user.city }}{% else %}Ville{% endif %}</p>
                </div>
                <div class="divider"></div>
                <button id="getUsers">Utilisateurs</button>
                <button id="getRentals">Locations</button>
                <div class="divider"></div>
                <button id="editProfile">Éditer le profil</button>
            </div>
            <div class="mainContent">
                <div class="usersList">
                    <div class="adminHeader">
                        <h2>Utilisateurs</h2>
                        <div class="divider"></div>
                    </div>
                    <table>
                        <tr>
                            <th>Id</th>
                            <th>Photo</th>
                            <th>Prénom</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Pays</th>
                            <th>Code Postal</th>
                            <th>Suppression</th>
                        </tr>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td><img src="{{ asset('uploads/users/' ~ user.photo) }}" alt=""></td>
                                <td>{{ user.firstname }}</td>
                                <td>{{ user.lastname }}</td>
                                <td title="{{ user.email }}">{{ user.email|slice(0, 12) }}...</td>
                                <td>0{{ user.phone }}</td>
                                <td>{{ user.country }}</td>
                                <td>{{ user.zipcode }}</td>
                                <td class="delete">
                                    <a href="{{ path('admin_deleteUser', { 'id': user.id }) }}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                <div class="rentalsList">
                    <div class="adminHeader">
                        <h2>Locations</h2>
                        <div class="divider"></div>
                    </div>
                </div>
                <div class="editForm">
                    <div class="adminHeader">
                        <h2>Profil</h2>
                        <div class="divider"></div>
                    </div>
                </div>
                <div class="bottomBar">

                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/javascripts/script.js') }}"></script>
{% endblock %}