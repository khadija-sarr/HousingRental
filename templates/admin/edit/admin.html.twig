{% extends 'base.html.twig' %}
{% block title %}HousingRental - Profil Admin{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css" integrity="sha512-EZSUkJWTjzDlspOoPSpUFR0o0Xy7jdzW//6qhUkoZ9c4StFkVsp9fbbd0O06p9ELS3H486m4wmrCELjza4JEog==" crossorigin="anonymous" />
    <style>
        .custom-file-label { display: none }
        .dropify-wrapper .dropify-message p {
            font-size: 1rem;
        }
    </style>
    <link rel="stylesheet" href="{{ asset('assets/stylesheets/admin/reset.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/stylesheets/admin/root.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/stylesheets/admin/subpages.css') }}">
{% endblock %}
{% block content %}
    <nav>
        <a class="siteTitle" href="{{ path('default_home') }}">HousingRental</a>
        <ul>
            {% if categories is defined %}
                {% for category in categories %}
                    <li>
                        <a href="{{ path('default_category', { 'alias' : category.alias }) }}">{{ category.name }}</a>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </nav>
    <div class="adminContainer">
        <div class="adminPanel">
            <div class="sideBar">
                <div class="adminPhoto">
                    {% if app.user %}
                        <img src="{{ asset('uploads/users/' ~ app.user.photo) }}" alt="Photo de {{ app.user.firstname }} {{ app.user.lastname }}">
                    {% else %}
                        <p>Photo</p>
                    {% endif %}
                </div>
                <div class="divider"></div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-signature"></i>
                    </div>
                    <p>{% if app.user %}{{ app.user.firstname }}{% else %}Prénom{% endif %}</p>
                </div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-signature"></i>
                    </div>
                    <p>{% if app.user %}{{ app.user.lastname }}{% else %}Nom{% endif %}</p>
                </div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <p title="{{ app.user.email }}">{% if app.user %}{{ app.user.email|slice(0, 12) }}...{% else %}Email{% endif %}</p>
                </div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <p>{% if app.user %}0{{ app.user.phone }}{% else %}Téléphone{% endif %}</p>
                </div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-globe-africa"></i>
                    </div>
                    <p>{% if app.user %}{{ app.user.country }}{% else %}Pays{% endif %}</p>
                </div>
                <div class="userInfo">
                    <div class="icon">
                        <i class="fas fa-city"></i>
                    </div>
                    <p>{% if app.user %}{{ app.user.city }}{% else %}Ville{% endif %}</p>
                </div>
                <div class="divider"></div>
                <button id="getUsers">Utilisateurs</button>
                <button id="getRentals">Locations</button>
                <div class="divider"></div>
                <a href="{{ path('admin_updateProfile', { 'id': app.user.id }) }}" id="editProfile">Éditer le profil</a>
            </div>
            <div class="mainContent">
                <div class="editForm">
                    <div class="adminHeader">
                        <h2>Mise à jour du profil</h2>
                    </div>
                    {{ form(adminForm) }}
                    <a href="{{ path('admin_backOffice') }}">Annuler la modification</a>
                </div>
                <div class="bottomBar">
                    <button id="adminPageSettings">
                        <i class="fas fa-cog"></i>
                    </button>
                </div>
                <div class="settings">
                    <h2>Paramètres</h2>
                    <h4>Thème</h4>
                    <div class="themeSelect">
                        <i class="fas fa-moon"></i>
                        <label for="themeSwitch" class="switch">
                            <input id="themeSwitch" type="checkbox">
                            <span class="slider round"></span>
                        </label>
                        <i class="fas fa-sun"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="confirmAction">
        <p>Êtes-vous sûr de vouloir supprimer <span id="elementToBeDeleted"></span> ?</p>
        <div class="modalButtons">
            <button id="confirm">Oui</button>
            <button id="cancel">Non</button>
        </div>
    </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js" integrity="sha512-8QFTrG0oeOiyWo/VM9Y8kgxdlCryqhIxVeRpWSezdRRAvarxVtwLnGroJgnVW9/XBRduxO/z1GblzPrMQoeuew==" crossorigin="anonymous"></script>
    <script>
        $('.dropify').dropify({
            messages: {
                default: 'Glissez-déposez un fichier ici ou cliquez',
                replace: 'Glissez-déposez un fichier ou cliquez pour remplacer',
                remove: 'Supprimer',
                error: 'Désolé, le fichier est trop volumineux'
            }
        });
    </script>
    <script src="{{ asset('assets/javascripts/admin/admin.js') }}"></script>
{% endblock %}