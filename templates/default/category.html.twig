{% extends "base.html.twig" %}
{% block title %}HousingRental - {{ category.name }}{% endblock %}
{% block content %}
    {% if category.name == "Appartement" %}
        <div id="appartement">
            <div class="cardsContainer">
                <div class="container">
                    {% for property in houses %}
                        {% include 'components/_card.html.twig' %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% elseif category.name == "Maison" %}
        <div id="maison">
            <div class="cardsContainer">
                <div class="container">
                    {% for property in houses %}
                        {% include 'components/_card.html.twig' %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% elseif category.name == "Évènement" %}
        <div id="evenement">
            <div class="cardsContainer">
                <div class="container">
                    {% for property in houses %}
                        {% include 'components/_card.html.twig' %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}