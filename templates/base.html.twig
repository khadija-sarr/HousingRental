<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('assets/images/logos/favicon.png') }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('assets/stylesheets/reset.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/stylesheets/base.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/stylesheets/pages/home.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/stylesheets/components/message.css') }}">
        {% endblock %}
    </head>
    <body>
        {% include 'components/_nav.html.twig' %}
        <main>
            {% include 'components/_banner.html.twig' %}
            {% block content %}{% endblock %}
            {% for message in app.flashes('success') %}
                <div class="flashMessage success">
                    <div>
                        <h4>Succ√®s</h4>
                        <p>{{ message }}</p>
                        <button id="flashMessageButton">Fermer</button>
                    </div>
                    <div class="flashMessageIcon">
                        <i class="fas fa-check"></i>
                    </div>
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="flashMessage error">
                    <div>
                        <h4>Erreur</h4>
                        <p>{{ message }}</p>
                        <button id="flashMessageButton">Fermer</button>
                    </div>
                    <div class="flashMessageIcon">
                        <i class="fas fa-times"></i>
                    </div>
                </div>
            {% endfor %}
        </main>
        {% include 'components/_footer.html.twig' %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
            <script src="{{ asset('assets/javascripts/components/navbar.js') }}"></script>
            <script src="{{ asset('assets/javascripts/components/slider.js') }}"></script>
            <script src="{{ asset('assets/javascripts/components/message.js') }}"></script>
        {% endblock %}
    </body>
</html>